{% if error_warning %}
  <div class="alert alert-warning alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
{% endif %}
{% if payment_methods %}
  {% for payment_method in payment_methods %}
    <div class="radio">
      <label>
        {% if payment_method.code == code or not code %}
          {% set code = payment_method.code %}
			<div class="form-group ">
			  <div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="payment_method" id="inlineRadio1{{ payment_method.code }}"
				  value="{{ payment_method.code }}" checked="checked">
				<label class="form-check-label" for="inlineRadio1{{ payment_method.code }}">
			{% if payment_method['html_image'] %}
				{{ payment_method['html_image'] }} 
			{% else %}
				{# {{ payment_method['title'] }}  #}
				<div class="payment-image">
					<img src="/img/cards.svg" alt="Payment methods">
				</div>
			{% endif %}
			</label>
			  </div>
			</div>

			<div class="form-group ">
			  <div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="payment_method" id="inlineRadio1{{ payment_method.code }}"
				  value="{{ payment_method.code }}" checked="checked">
				<label class="form-check-label" for="inlineRadio1{{ payment_method.code }}">
			{% if payment_method['html_image'] %}
				{{ payment_method['html_image'] }} 
			{% else %}
				{# {{ payment_method['title'] }}  #}
				<div class="payment-image">
					<img src="/img/stripe.svg" alt="Payment methods">
				</div>
			{% endif %}
			</label>
			  </div>
			</div>
        {% else %}
          <div class="form-group ">
			  <div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="payment_method" id="inlineRadio1{{ payment_method.code }}"
				  value="{{ payment_method.code }}">
				<label class="form-check-label" for="inlineRadio1{{ payment_method.code }}">
			{% if payment_method['html_image'] %}
				{{ payment_method['html_image'] }} 
			{% else %}
				{{ payment_method['title'] }} 
			{% endif %}
			</label>
			  </div>
			</div>
        {% endif %}
        
        {% if payment_method.terms %}
          ({{ payment_method.terms }})
        {% endif %}
      </label>
    </div>
  {% endfor %}
{% endif %}
<input type="hidden" name="agree" value="1"/>