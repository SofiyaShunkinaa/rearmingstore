{{ header }}
<div class="head_bg"></div>
<section class="catalog">
  <div class="container">
	<div class="row">
	  <div class="col-md-4">
		{{ column_left }}
	  </div>
	  <div class="col-md-8">
		<nav class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				{% if breadcrumb.href %}
					<a href="{{ breadcrumb.href }}"  class="breadcrumb-item">{{ breadcrumb.text }}</a>
				{% else %}
					<span class="breadcrumb-item active">{{ breadcrumb.text }}</span>
				{% endif %}
			{% endfor %}
		</nav>
		<div class="pagetitle">
		  <h1 class="titlepage">{{ heading_title }}</h1>
		</div>
		{{ content_top }}
		<div class="row">
		  <div class="col-md-12">
		  {% if orders %}
			{% for order in orders %}
			<div class="orderCard">
			  <div class="row">
				<div class="col-md-7">
				  <h2>{{ order.catname }} <span>{{ order.total }}</span></h2>
				  <p>{{ order.name }}</p>
				</div>
				<div class="col-md-5">
				  <a href="{{ order.view }}" data-toggle="tooltip" class="btn btn-outline-primary {{ order.statuscls }}">{{ order.status }}</a>
				  <div></div>
				  <a href="#" data-bs-toggle="modal" data-bs-target="#request" class="chartSupport">Chat with support</a>
				</div>
			  </div>
			  <div class="row">
				<div class="col-md-12">
				  <div class="ocinfo">
					<div>Order</div>
					<div>LHC{{ order.order_id }}</div>
				  </div>
				  <div class="ocinfo">
					<div>Region</div>
					<div>{{ order.server }}</div>
				  </div>
				  <div class="ocinfo">
					<div>Start Date</div>
					<div>{{ order.date_added }}</div>
				  </div>
				  <div class="ocinfo">
					<div>Deadline</div>
					<div>ASAP</div>
				  </div>
				  <div class="ocinfo">
					<div>Acc free house</div>
					<div>Any</div>
				  </div>
				</div>
			  </div>
			</div>
			{% endfor %}
			{% else %}
				<p>{{ text_no_results }}</p>
			{% endif %}
		  </div>
		</div>
          
		{{ content_bottom }}
	  </div>
	</div>

  </div>
</section>
{{ footer }}