<div class="usernav">
{% if not logged %}
<ul>
    <li><a href="{{ login }}" class="list-group-item">{{ text_login }}</a></li>
    <li><a href="{{ register }}" class="list-group-item">{{ text_register }}</a></li>
    <li><a href="{{ forgotten }}" class="list-group-item">{{ text_forgotten }}</a></li>
</ul>
{% endif %}
{% if logged %}
  <ul>
	<li class="{{account_cls}}"><a href="{{ account }}"><i class="iconUser useri"></i>User profile</a></li>
	<li class="{{order_cls}}"><a href="{{ order }}"><i class="iconUser carti"></i>My orders</a></li>
  </ul>
  <ul>
	<li><a href="{{ logout }}" style="font-weight: 700; color:#000"><i class="iconUser logini" style="background-color: #000;"></i>Sing out</a></li>
	<li class="{{password_cls}}"><a href="{{ password }}"><i class="iconUser unloci"></i>Change password</a></li>
  </ul>
{% endif %}
</div>